<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="15dp"
    android:gravity="center"
    android:background="@drawable/background"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#88ffffff"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="20dp"
            android:background="#00000000">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book a Room"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center|top"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:text="Room No."
                    android:textSize="25dp"
                    android:layout_gravity="center|top"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:hint="Select room"
                    android:textSize="25dp"
                    android:clickable="true"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/room"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:text="Time From"
                    android:textSize="25dp"
                    android:layout_gravity="center|top"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:id="@+id/from"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:clickable="true"
                    android:background="#00000000"
                    android:hint="Select start time"
                    android:layout_gravity="center|top"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:text="Time To"
                    android:textSize="25dp"
                    android:layout_gravity="center|top"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:clickable="true"
                    android:id="@+id/to"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:hint="Select end time"
                    android:background="#00000000"
                    android:layout_gravity="center|top"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:text="On Date"
                    android:textSize="25dp"
                    android:layout_gravity="center|top"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:id="@+id/ondate"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:clickable="true"
                    android:hint="Select date"
                    android:background="#00000000"
                    android:layout_gravity="center|top"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_gravity="center">

                <android.support.design.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    app:cornerRadius="5dp"
                    android:textColor="#aa000000"
                    android:backgroundTint="#77ffffff"
                    android:layout_height="match_parent"
                    android:text="Send Mail"
                    android:id="@+id/sendbutton"
                    android:layout_gravity="center" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <android.support.design.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textColor="#aa000000"
                    android:backgroundTint="#77ffffff"
                    app:cornerRadius="5dp"
                    android:layout_height="match_parent"
                    android:text="Edit Template"
                    android:id="@+id/editbutton"
                    android:layout_gravity="center" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>