<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:padding="16dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Subject"
        android:lines="1"
        android:gravity="top"
        android:textSize="22dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/sendSubject"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Subject"
        android:lines="1"
        android:gravity="top"
        android:textSize="22dp"
        android:visibility="gone"
        android:background="#00000000"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/sendSubjectET"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To: "
            android:textSize="15dp"
            android:lines="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="p4prabhutva@gmail.com"
            android:textSize="15dp"
            android:lines="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/sendReceiver"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="p4prabhutva@gmail.com"
            android:textSize="15dp"
            android:background="#00000000"
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/sendReceiverET"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#444444"
        android:foregroundTint="#000000"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is your mail."
        android:textSize="20dp"
        android:textAlignment="viewStart"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/sendText"
        />
    <EditText
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is your mail."
        android:textSize="20dp"
        android:visibility="gone"
        android:background="#00000000"
        android:textAlignment="viewStart"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/sendTextET"
        />

</LinearLayout>